<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <h4>follow<%=link_to  @user.following_users.count, followings_user_path(@user) %></h4>
  <h4>follower<%=link_to @user.follower_users.count, followers_user_path(@user)%></h4>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @microposts.any? %>
      <h3>Microposts (<%= @microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
  <%=paginate(@microposts) %>
</div>
 