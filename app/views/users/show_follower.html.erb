<% if current_user.follower_users.any? %>
  <h3>follow (<%= @users.count %>)</h3>
  <ol id="follower">
    <% @follower_pages.each do |user|%>
      <li class="clearfix">
        <%= gravatar_for user %>
        <%= user.name %>
      </li>
    <br><hr>
    <% end%>
  </ol>
<% else %>
    <div>友達がいません</div>
<% end %>
<%=paginate(@follower_pages) %>