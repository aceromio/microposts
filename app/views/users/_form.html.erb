<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %> 
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :age %>
      <%= f.text_field :age, class: 'form-control' %>

      <%= f.label :gender %>
      <%= f.radio_button :gender, "男", class: 'form-control' %> <%= f.label :gender_1, "男" %>
      <%= f.radio_button :gender, "女", class: 'form-control' %> <%= f.label :gender_2,  "女"  %>
      
      <%= f.label :profile %>
      <%= f.text_area :profile, class: 'form-control' %>
      
      <%= f.label :email %>
      <%= f.text_are :email, class: 'form-control' %>

      <%= f.label :area %>
      <%= f.select (:area, ['北海道','東北','関東','中部','関西'], {}, { :class => 'form-control' }) %>
      
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.submit, class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>